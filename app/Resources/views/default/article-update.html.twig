{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h1>Modification de  {{ article.title }}</h1>
                <form action="#" method="post">

                    {{ article.id }}


                    {{ form_start(form) }}

                    <div class="form-group">
                    {{ form_label(form.title, 'Votre titre') }} : {{ form_widget(form.title,{'value' : article.title }) }}
                    </div>

                    <div class="form-group">
                    {{ form_label(form.content, 'Votre article') }} : {{ form_widget(form.content,{'value' : article.content }) }}
                    </div>

                    {{ form_widget(form.save, { 'label': 'Mise Ã  jour' }) }}

                    {{ form_end(form) }}

                </form>
            </div>
        </div>
    </div>





{% endblock %}